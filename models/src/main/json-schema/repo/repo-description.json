{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Description of the repo.",
  "javaName": "RepoDescription",
  "properties": {
    "projectName": {
      "type": "string",
      "description": "Name of the project contains the repo.",
      "id": "projectName"
    },
    "repoName": {
      "type": "string",
      "description": "Repo name.",
      "id": "repoName"
    },
    "url": {
      "type": "string",
      "description": "Url where the repo is located.",
      "id": "url"
    },
    "permissions": {
      "type": "array",
      "description": "List of permissions granted to the repo.",
      "items": {
        "$ref": "../permission/permission-description.json"
      },
      "id": "permissions"
    }
  },
  "id": "/",
  "required": [
    "projectName",
    "repoName",
    "permissions"
  ],
  "additionalProperties": false
}